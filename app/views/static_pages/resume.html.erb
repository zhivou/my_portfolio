<script type="text/javascript" src="https://platform.linkedin.com/badges/js/profile.js" async defer></script>
<%= stylesheet_link_tag "static_pages" %>
<% @page_title = "Resume | Dmitrii Skrylev Portfolio"%>
<% @seo_keywords = "Full Stack Developer Utah Ruby Rails React JavaScript Salt Lake City SDET Dmitrii Skrylev Resume"%>

<div class="resumeWrapper container">
  <div class="row justify-content-md-center">
    <%= render 'avatar_section' %>
    <div class="col-xl-8 col-sm-12" id="card-skills">
      <div class="avatar-links d-xl-none text-center">
        <a href="https://drive.google.com/file/d/1PugEXd2bfCtmEuacst_dwcEmzAyzKnof/view?usp=sharing" class="m-3 pb-4"><%= fa_icon "file" %> PDF Resume</a>
        <a href="https://www.facebook.com/profile.php?id=100006026142892&ref=bookmarks" class="m-3 pb-4"><%= fa_icon "facebook-square" %> Facebook</a> <!-- TODO: Change it to dinamic data -->
        <a href="/contacts" class="m-3 pb-4"><%= fa_icon "envelope" %> Contact Me</a>
        <a href="https://github.com/zhivou" class="m-3 pb-4"><%= fa_icon "github" %> Github</a>
      </div>
      <div class="card p-3 mb-3 bg-white rounded">
        <h2 class="ml-4 mt-4 text-muted resume-title title-crop">Skills</h2>
        <hr>
        <div class="mr-4 ml-4 mb-4 mt-2">
          <%= render 'skill_section', skills: @skills %>
        </div>
      </div>
      <div class="card p-3 mb-3 bg-white rounded">
        <h2 class="card-subtitle ml-4 mt-4 text-muted resume-title">Experience</h2>
        <hr>
        <div class="mr-4 ml-4 mb-4 mt-2">
          <%= render 'experience_section', experience: @experience %>
        </div>
      </div>
      <div class="card p-3 mb-3 bg-white rounded">
        <h2 class="card-subtitle ml-4 mt-4 text-muted resume-title">Education</h2>
        <hr>
        <div class="mr-4 ml-4 mb-4 mt-2">
          <%= render 'education_section', educations: @educations %>
        </div>
      </div>
    </div>
  </div>
  <div class="m-4">
    <h3 class="text-center mb-4">READ MORE IN BLOGS</h3>
    <hr class="m-3">
    <div id="react-blogs-history"></div>
  </div>
  <div class="m-4">
    <h3 class="text-center mb-4">READ MORE IN PROJECTS</h3>
    <hr class="m-3">
    <div id="react-projects-history"></div>
  </div>
</div>
