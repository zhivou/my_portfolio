<%= javascript_pack_tag 'assets_manager/App' %>
<%= stylesheet_link_tag "budget_app" %>

<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header"><i class="fa fa-users"></i> Assets Manager</h3>
    <ol class="breadcrumb">
      <li><i class="fa fa-home p-1"></i><%= link_to 'Dashboard', household_dashboard_path %></li>
      <li><i class="fa fa-laptop p-1"></i>Assets Manager</li>
    </ol>

    <div class="text-center">
      <div id="react-asset"></div>
    </div>

    <% if @assets.any? %>
        <div class="card p-5">
          <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Count</th>
              <th>Amount</th>
              <th>Location URL</th>
              <th>Credentials URL</th>
              <th>Notes</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @assets.each do |asset| %>
              <tr>
                <td><%= asset.name %></td>
                <td><%= asset.count %></td>
                <td><%= asset.amount %></td>
                <td><%= link_to asset.location_url, asset.location_url %></td>
                <td><%= link_to asset.credentials, asset.credentials %></td>
                <td><%= asset.notes %></td>
                <td><%= asset.current %></td>
                <td><%= link_to 'Show', asset %></td>
                <td><%= link_to 'Edit', edit_my_asset_path(asset) %></td>
                <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
          </table>
        </div>
        <div class="text-center">
          <%= link_to 'Add More', new_my_asset_path, class: "btn btn-success btn-block" %>
        </div>
    <% end %>
    <% unless @assets.any? %>
      <div class="card text-center p-5">
        No Assets yet created. Click <%= link_to 'here', new_my_asset_path %> to add new Asset.
      </div>
    <% end %>
  </div>
</div>
