<form action="/avatar/create" accept-charset="UTF-8" method="post">

  <div class="field">
    <label for="avatar_path">Avatar path</label>
    <input id="avatar_path" type="text" name="avatar[path]">
  </div>

  <div class="field">
    <label for="avatar_name">Name</label>
    <input id="avatar_name" type="text" name="avatar[name]">
  </div>

  <div class="field">
    <label for="avatar_title">Title</label>
    <input id="avatar_title" type="text" name="avatar[title]">
  </div>

  <div class="field">
    <label for="avatar_text">About</label>
    <textarea id="avatar_text" name="avatar[short_about]"></textarea>
  </div>

  <div class="actions">
    <input type="submit" name="commit">
  </div>
</form>