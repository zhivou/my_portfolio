<tr>
  <th scope="row"><%= runner.name %></th>
  <td><%= runner.cron %></td>
  <td><%= runner.status %></td>
  <td><%= runner.tags.inspect %></td>
  <td><%= runner.description %></td>
  <td>
    <%=
      button_to 'Start',
      household_services_start_path,
      method: 'post',
      params: { job_id: runner.jid },
      remote: true,
      class: runner.status == "Enabled" ? "btn btn-success disabled" : "btn btn-success enabled"
    %>
    <%=
      button_to 'Stop',
      household_services_stop_path,
      method: 'post',
      params: { job_id: runner.jid },
      remote: true,
      class: runner.status == "Enabled" ? "btn btn-danger enabled" : "btn btn-danger disabled"
    %>
  </td>
</tr>
