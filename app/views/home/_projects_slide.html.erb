<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8">
      <ul class="event-list">

        <% projects.each do |project| %>
          <li>
            <time datetime="2014-07-20">
              <span class="day"><%= project.created_at.strftime("%d") %></span>
              <span class="month"><%= project.created_at.strftime("%B") %></span>
              <span class="year"><%= project.created_at.strftime("%Y") %></span>
            </time>
              <%= image_tag project.main_image.variant(resize: "300"), class: "project-images", alt: project.id%>
            <div class="info">
              <h2 class="title"><%= project.title %></h2>
              <p class="desc">To read more about this project please click here</p>
            </div>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
</div>



