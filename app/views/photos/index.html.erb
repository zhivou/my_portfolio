<%= javascript_pack_tag 'photos/GalleryUI' %>
<%= stylesheet_link_tag 'photos' %>
<% @page_title = "Photo Gallery | Dmitrii Skrylev Portfolio"%>
<% @seo_keywords = "Photos Photography Photographer Dmitrii Skrylev"%>

<div class="container sticky-top">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <span class="navbar-brand">
      <%= image_tag "react-logo.svg", class: "some css class here", width: "30", height: "30", class: "d-inline-block align-top" %>
      PHOTOFEED
    </span>
    <div class="justify-content-end navbar-collapse collapse">
      <div class="navbar-nav">
          <%= link_to 'Add New Photo', new_photo_path, class: "nav-link" if current_user %>
