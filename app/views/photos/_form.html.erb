<%= form_with(model: photo, local: true) do |form| %>
  <% if photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
        <% photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :width %>
    <%= form.number_field :width %>
  </div>

  <div class="field">
    <%= form.label :height %>
    <%= form.number_field :height %>
  </div>

  <div class="field">
    <%= form.label "Upload Photo" %>
    <%= form.file_field :picture, class: "m-4" %>
  </div>

  <div>
    <%= form.fields_for :photo_sections do |sections_form| %>
      <%= render 'photo_sections_fields', f:sections_form %>
    <% end %>

    <div>
      <%= link_to_add_association 'Add Publications', form, :photo_sections %>
    </div>

  </div>

  <div>
    <%= link_to_add_association 'Add Key', form, :photo_sections, class: "mt-4" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
