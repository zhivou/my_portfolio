<%= stylesheet_link_tag "blogs" %>

<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-2 order-last">
      <div class="card shadow p-3 mb-3 bg-white rounded">Calendar</div>
      <hr>
      <div class="card shadow p-3 mb-3 bg-white rounded">
        <% @blogs.each do |blog| %>
          <%= link_to blog.title, blog%>
        <% end %>
      </div>
    </div>
    <div class="col-10">
    <% @blogs.each do |blog| %>
        <div class="card shadow p-3 mb-3 bg-white rounded">
          <div class="card-title"><%= blog.title %></div>
          <div class="card-body"><%= blog.body.first(150) + " "%><a href="<%= blog_path(blog) %>" class="blogLink"><u>more>></u></a></div>
          <div class="card-body">Posted: <%= distance_of_time_in_words(blog.created_at, Time.now) %></div>
          <%= link_to 'Edit', edit_blog_path(blog)%>
          <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    <% end %>
    </div>
  </div>
  <br>

  <%= link_to 'New Blog', new_blog_path %>
</div>
