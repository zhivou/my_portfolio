<%= form_with(model: blog, local: true ) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.fields_for :tags do |tag_form| %>
      <%= render 'tag_fields', f: tag_form %>
    <% end %>
  </div>
  <div>
    <%= link_to_add_association 'Add Tag', form, :tags, class: "mt-4" %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_title, size: 60, class: "mt-4" %>
  </div>

  <div class="field">
    <%= form.rich_text_area :body_area, id: :blog_body_area %>
  </div>

  <div class="field">
    <%= form.label"Upload Main Picture" %>
    <%= form.file_field :main_image, class: "m-4" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
