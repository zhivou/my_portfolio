<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @blog.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @blog.body %>
  </p>

  <p>
    <strong>Image:</strong>
    <br>

    <% @blog.images.each do |image| %>
      <%= image_tag image %>
    <% end %>

  <%= link_to 'Edit', edit_blog_path(@blog) %> |
  <%= link_to 'Back', blogs_path %>
</div>
