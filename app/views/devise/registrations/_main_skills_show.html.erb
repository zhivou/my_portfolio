<p id="notice"><%= notice %></p>

<h1>Main Skills Section</h1>

<table>
  <thead>
  <tr>
    <th>Skill Name</th>
    <th>Percent</th>
    <th>Hard skill?</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% main_skills.each do |skill| %>
    <tr>
      <td><%= skill.name %></td>
      <td><%= skill.percent %></td>
      <td><%= skill.hard %></td>
      <td><%= link_to 'Show', skill %></td>
      <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
      <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skill', new_skill_path %>
