<div class="modal" id="createNewExperience" tabindex="-1" role="dialog" aria-labelledby="createNewTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createNewTitle">Create New Experience:</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form', experience: experience %>
      </div>
    </div>
  </div>
</div>